<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/bcc_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bookcover"
        android:contentDescription="BookCoverImage"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@color/abs__background_holo_dark"
        android:alpha="0.8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">

            <RatingBar
                android:id="@+id/bcc_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/bcc_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="8pt"
                android:singleLine="true"
                android:gravity="right"
                android:layout_gravity="right"/>

        </LinearLayout>

        <TextView
            android:id="@+id/bcc_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="5pt"
            android:gravity="right"/>

        <TextView
            android:id="@+id/bcc_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="5pt"
            android:gravity="right"/>

    </LinearLayout>

</merge>